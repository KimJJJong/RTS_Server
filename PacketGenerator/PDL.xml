<?xml version="1.0" encoding="utf-8" ?>
<PDL>
	<!-- 로그인 -->
	<packet name="C_Login">
		<string name="username"/>
		<string name="password"/>
	</packet>
	<packet name="S_Login">
		<bool name="success"/>
		<string name="message"/>
	</packet>

	<!-- 로비 -->
	<packet name="C_EnterLobby">
		<int name="userId"/>
	</packet>
	<packet name="S_EnterLobby">
		<list name="roomList">
			<int name="roomId"/>
		</list>
	</packet>
	<packet name="C_CreateRoom">
		<string name="roomName"/>
	</packet>
	<packet name="S_CreateRoom">
		<bool name="success"/>
		<string name="roomId"/>
	</packet>
	<packet name="C_JoinRoom">
		<string name="roomId"/>
	</packet>
	<packet name="S_JoinRoom">
		<int name="sessionID"/>
		<string name="roomId"/>
	</packet>

	
	<!-- 준비 상태 -->
	<packet name="C_Ready">
		<bool name="isReady"/>
	</packet>
	<packet name="S_Ready">
		<map name="playerReadyState">
			<int name="playerId"/>
			<bool name="isReady"/>
		</map>
	</packet>
	<packet name="S_StartGame">
		<string name="gameId"/>
	</packet>
	<packet name ="C_SceneLoaded">
		<bool name="isLoad"/>
	</packet>
	
	<packet name="S_SceneLoad">
	</packet>

	<!-- 게임 -->
	<packet name="S_InitGame">
		<list name="cardCombination">
			<int name ="lv"/>
			<string name="uid"/>
		</list>
		<int name="size"/>
	</packet>
	
	<packet name="S_GameUpdate">
		<list name="pool">
			<int name="unitId"/>
			<int name="hp"/>
			<float name="x"/>
			<float name="y"/>
		</list>
	</packet>
	<packet name="C_ReqSummon">
		<float name="x"/>
		<float name="y"/>
		<int name="oid"/>
		<int name="needMana"/>
		<int name="reqSessionID"/>
		<double name="clientSendTime"/>
	</packet>
	<packet name="S_AnsSummon">
		<float name="x"/>
		<float name="y"/>
		<int name="oid"/>
		<int name="reducedMana"/>
		<int name="reqSessionID"/>
		<double name="summonTime"/>
		<double name="serverReceiveTime"/>
		<double name="clientSendTime"/>
	</packet>
	<packet name="C_RequestManaStatus">
		<int name="playerId"/>
	</packet>
	<packet name="S_SyncTime">
		<double name="serverTime"/>
	</packet>
	<packet name="S_GameStateUpdate">
		<list name="units">
			<int name="objectID"/>
			<int name="unitID"/>
			<float name="x"/>
			<float name="y"/>
			<int name="hp"/>
		</list>
		<list name="mana">
			<int name="playerMana"/>
			<int name="sessionID"/>
		</list>
		<double name="serverTime"/>
	</packet>

	<packet name="S_ManaUpdate">
		<int name="playerId"/>
		<int name="currentMana"/>
	</packet>

	<packet name="S_UnitAction">
		<int name="unitId"/>
		<int name="targetX"/>
		<int name="targetY"/>
		<string name="actionType"/>
	</packet>

	<packet name="S_GameOver">
		<int name="winnerId"/>
		<string name="resultMessage"/>
	</packet>
	
	


</PDL>

