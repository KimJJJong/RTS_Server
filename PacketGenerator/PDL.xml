<?xml version="1.0" encoding="utf-8" ?>
<PDL>
	<!-- 로그인 -->
	<packet name="C_LoginAuth">
		<string name="accessToken"/>
	</packet>
	
	<packet name="C_Login">
		<string name="username"/>
		<string name="password"/>
	</packet>
	<packet name="S_Login">
		<bool name="success"/>
		<string name="message"/>
	</packet>

	<!-- 로비 -->
	<packet name="C_EnterLobby">
		<int name="userId"/>
	</packet>
	<packet name="S_EnterLobby">
		<list name="roomList">
			<int name="roomId"/>
		</list>
	</packet>
	<packet name="C_CreateRoom">
		<string name="roomName"/>
	</packet>
	<packet name="S_CreateRoom">
		<bool name="success"/>
		<string name="roomId"/>
	</packet>
	<packet name="C_JoinRoom">
		<string name="roomId"/>
	</packet>
	<packet name="S_JoinRoom">
		<int name="sessionID"/>
		<string name="roomId"/>
	</packet>

	<packet name ="C_MatchRequest">
	</packet>

	<packet name ="C_MatchCancel">
	</packet>
	
	<!-- 준비 상태 -->
	<packet name="C_Ready">
		<bool name="isReady"/>
	</packet>
	<packet name="S_Ready">
	</packet>
	<packet name="S_StartGame">
		<string name="gameId"/>
	</packet>
	
	
	<packet name ="C_SetCardPool">
		<list name="cardCombination">
			<int name ="lv"/>
			<string name="uid"/>
		</list>
	</packet>
	
	<packet name ="C_SceneLoaded">
		<bool name="isLoad"/>
	</packet>
	
	<packet name="S_SceneLoad">
		<double name="StartTime"/>
		<double name="ServerSendTime"/>
	</packet>

	<!-- 게임 -->
	<packet name="S_InitGame">
		<list name="cardCombination">
			<int name ="lv"/>
			<string name="uid"/>
		</list>
		<int name="size"/>
		<double name ="gameStartTime"/>
		<double name ="duration"/>
	</packet>
	
	<packet name ="S_CardPool">
		<list name="cardCombination">
			<int name ="lv"/>
			<string name="uid"/>
		</list>	
	</packet>
	
	<packet name="S_GameUpdate">
		<list name="pool">
			<int name="unitId"/>
			<int name="hp"/>
			<float name="x"/>
			<float name="y"/>
		</list>
	</packet>
	<packet name="C_ReqSummon">
		<float name="x"/>
		<float name="y"/>
		<int name="oid"/>
		<float name="needMana"/>
		<int name="reqSessionID"/>
		<long name="ClientSendTimeMs"/>
	</packet>
	<packet name="S_AnsSummon">
		<float name="x"/>
		<float name="y"/>
		<float name="reducedMana"/>
		<int name="oid"/>
		<int name="reqSessionID"/>
		<int name="randomValue"/>
		<int name="ExcuteTick"/>
		<long name="ServerReceiveTimeMs"/>
		<long name="ServerStartTimeMs"/>
		<long name="ClientSendTimeMs"/>
	</packet>
	<packet name="C_RequestManaStatus">
		<int name="playerId"/>
	</packet>
	<packet name="S_SyncTime">
		<double name="serverTime"/>
	</packet>
	<packet name="S_GameStateUpdate">
		<list name="units">
			<int name="objectID"/>
			<int name="unitID"/>
			<float name="x"/>
			<float name="y"/>
			<int name="hp"/>
		</list>
		<list name="mana">
			<float name="playerMana"/>
			<int name="sessionID"/>
		</list>
		<double name="serverTime"/>
	</packet>

	<packet name="S_ManaUpdate">
		<int name="playerId"/>
		<float name="currentMana"/>
	</packet>

	<packet name="S_UnitAction">
		<int name="unitId"/>
		<int name="targetX"/>
		<int name="targetY"/>
		<string name="actionType"/>
	</packet>

	<packet name="S_GameOver">
		<int name="winnerId"/>
		<string name="resultMessage"/>
	</packet>
	
	


</PDL>

